<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/recipesListFragment">
    <fragment
        android:id="@+id/recipesListFragment"
        android:name="ru.rumigor.cookbook.ui.recipesList.RecipesListFragment"
        android:label="Список рецептов">
        <action
            android:id="@+id/action_recipesListFragment_to_recipeDetailsFragment"
            app:destination="@id/recipeDetailsFragment" />
        <action
            android:id="@+id/action_recipesListFragment_to_tagsFragment"
            app:destination="@id/tagsFragment"
            app:popUpTo="@id/recipesListFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/recipeDetailsFragment"
        android:name="ru.rumigor.cookbook.ui.recipeDetails.RecipeDetailsFragment"
        android:label="Описание рецепта">
        <action
            android:id="@+id/action_recipeDetailsFragment_to_addRecipeFragment"
            app:destination="@id/addRecipeFragment"
            app:popUpTo="@id/recipesListFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_recipeDetailsFragment_to_dialog"
            app:destination="@id/dialog" />
        <action
            android:id="@+id/action_recipeDetailsFragment_to_recipesListFragment"
            app:destination="@id/recipesListFragment"
            app:popUpTo="@id/recipesListFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/addRecipeFragment"
        android:name="ru.rumigor.cookbook.ui.addRecipe.AddRecipeFragment"
        android:label="Добавить/изменить рецепт">
        <action
            android:id="@+id/action_addRecipeFragment_to_recipeDetailsFragment2"
            app:destination="@id/recipeDetailsFragment"
            app:popUpTo="@id/recipeDetailsFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_addRecipeFragment_to_recipesListFragment"
            app:destination="@id/recipesListFragment"
            app:popUpTo="@id/recipesListFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/dialog"
        android:name="ru.rumigor.cookbook.ui.recipeDetails.Dialog"
        android:label="Dialog" />
    <fragment
        android:id="@+id/favoritesFragment"
        android:name="ru.rumigor.cookbook.ui.favorites.FavoritesFragment"
        android:label="Закладки">
        <action
            android:id="@+id/action_favoritesFragment_to_recipesListFragment"
            app:destination="@id/recipesListFragment"
            app:popUpTo="@id/recipesListFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/categoryFragment"
        android:name="ru.rumigor.cookbook.ui.category.CategoryFragment"
        android:label="Категории">
        <action
            android:id="@+id/action_categoryFragment_to_recipesListFragment"
            app:destination="@id/recipesListFragment"
            app:popUpTo="@id/recipesListFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/tagsFragment"
        android:name="ru.rumigor.cookbook.ui.tagFilter.TagsFragment"
        android:label="Поиск по тэгам" />
</navigation>